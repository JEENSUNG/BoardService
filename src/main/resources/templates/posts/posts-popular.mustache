{{>layout/header}}

<div id="posts_list">
    <table id="table" class="table table-horizontal">
        <thead id="thead">
        <tr>
            <th>번호</th>
            <th class="col-md-6 text-center">제목</th>
            <th>작성자</th>
            <th>작성일</th>
            <th>조회수</th>
            <th>추천수</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/read/{{id}}">{{title}}</a></td>
                <td>{{writer}}</td>
                <td>{{createdDate}}</td>
                <td>{{view}}</td>
                <td>{{likeCount}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
    {{! Page }}
    {{>posts/posts-page}}
</div>
{{>layout/footer}}