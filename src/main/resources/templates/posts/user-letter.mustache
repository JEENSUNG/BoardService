{{>layout/header}}
<div id="posts_list">
    <div class="container col-md-8">
        <form>
            <input type="hidden" id="id" value="{{to}}">
            <input type="hidden" id="userId" value="{{user.id}}">
            <input type="hidden" id="pageNum" value="{{pageNum}}">
            <div class="form-group">
                {{nickname}}님에게 보내는 쪽지<br>
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea rows="8" class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
        </form>
        <button type="button" id="btn-post-letter-save" class="btn btn-primary bi bi-pencil-fill"> 작성</button>
    </div>
</div>
{{>layout/footer}}